{
    "manifest_version": 2,
    "name": "Twitter Friends",
    "version": "0.0.1",
    "description": "Tracks changes to your twitter friends",
    "offline_enabled": false,
    "icons": {
        "16": "16x16.png",
        "48": "48x48.png",
        "128": "128x128.png"
    },
    "browser_action": {
        "default_title": "Twitter Friends",
        "default_popup": "popup.html"
    },
    /*
    "content_scripts": [
        {
            "matches": ["https://twitter.com/*"],
            "js": ["in-content.js"]
        }
    ],
    */
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_security_policy":
        "script-src 'self' 'unsafe-eval'; object-src 'self'; img-src * data: 'self' 'unsafe-eval'",
    "permissions": [
        "https://twitter.com/",
        "https://twitter.com/*",
        "https://api.twitter.com/*",
        "activeTab",
        "storage",
        "webRequest",
        "webRequestBlocking"
    ]
}
